<div
  class="flex items-center border-b border-b-2 border-teal py-2"
>
  <input
    oninput={{action "setNewMessage" value="target.value"}}
    required
    value={{messageToSend}}
    class="appearance-none bg-transparent border-none w-full text-grey-darker mr-3 py-1 px-2 leading-tight focus:outline-none resize-none"
  >

  <button
    type="submit"
    class="flex-no-shrink bg-teal hover:bg-teal-dark border-teal hover:border-teal-dark text-sm border-4 text-white py-1 px-2 rounded"
  >
    Send
  </button>
</div>
